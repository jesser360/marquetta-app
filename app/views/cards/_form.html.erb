<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions"><br>
    <h3>Choose a User</h3>
    <% @users.each do |user|%>
    <h4>
    <label><%= user['email']%></label>
    <%= form.radio_button :user_token, value: user['token']%></h4>
    <%end%><br>
    <h3>Choose a Card Product</h3>
    <% @card_products.each do |cp|%>
    <h4>
    <label><%= cp['name']%></label>
    <%= form.radio_button :card_product_token, value: cp['token']%></h4>
    <%end%>

    <%= form.submit %>
  </div>
<% end %>
