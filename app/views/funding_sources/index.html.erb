<p id="notice"><%= notice %></p>

<h1>Funding Sources</h1>

<table cellpadding="10" cellspacing="7" border="0" class="table table-striped table-bordered" id="customers_table">
  <thead>
    <tr>
      <th colspan="3"> CARDS</th>
    </tr>
    <tr>
      <th>NAME</th>
      <th>TOKEN</th>
      <th>ACCOUNT #</th>
    </tr>
  </thead>

  <tbody>
    <% @funding_sources.each do |funding_source| %>
      <tr>
        <td><%=funding_source.name%></td>
        <td><%=funding_source.token%></td>
        <td><%=funding_source.account%></td>
        <td><%= link_to 'Show', funding_source %></td>
        <td><%= link_to 'Edit', edit_funding_source_path(funding_source) %></td>
        <td><%= link_to 'Destroy', funding_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

